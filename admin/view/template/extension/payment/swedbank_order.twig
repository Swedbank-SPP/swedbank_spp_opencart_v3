<h2>{{ text_payment_info|raw }}</h2>
<div class="alert alert-success" id="swedbank_transaction_msg" style="display:none;"></div>
<table class="table table-striped table-bordered">
    <tr>
        <td>{{ text_order_ref|raw }}</td>
        <td>{{ swedbank_order.order_code|raw }}</td>
    </tr>
    <tr>
        <td><{{ text_order_total|raw }}</td>
        <td><{{ swedbank_order.total_formatted|raw }}></td>
    </tr>
    <tr>
        <td>{{  text_total_released|raw }}</td>
        <td id="swedbank_total_released">{{ swedbank_order.total_released_formatted|raw }}</td>
    </tr>
    <tr>
        <td>{{ text_transactions|raw }}:</td>
        <td>
            <table class="table table-striped table-bordered" id="swedbank_transactions">
                <thead>
                    <tr>
                        <td class="text-left"><strong>{{ text_column_date_added|raw }}</strong></td>
                        <td class="text-left"><strong>{{ text_column_type|raw }}</strong></td>
                        <td class="text-left"><strong>{{ text_column_amount|raw }}</strong></td>
                    </tr>
                </thead>
                <tbody>
                   {% if swedbank_order.transactions is not empty  %}
                        {% for transaction in swedbank_order.transactions) %}
                        <tr>
                            <td class="text-left">{{ transaction.date_added|raw }}</td>
                            <td class="text-left">{{ transaction.type|raw }}</td>
                            <td class="text-left">{{ transaction.amount|raw }}></td>
                        </tr>
                       {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </td>
    </tr>
</table>